<!DOCTYPE html>
<html>
<head>
  <title><%= @site_title %></title>
  <%= stylesheet_link_tag "960gs/960" %>
  <%= stylesheet_link_tag "imagesite" %>
  <%= stylesheet_link_tag "tabs" %>
  <!--< %= javascript_include_tag :defaults %>-->
  <%= javascript_include_tag "jquery.min.js" %>
  <%= csrf_meta_tag %>
</head>
<body>

<div class="container_12">
  <div class="grid_12">
    <p>
    <h1 class="sitetitle"><a href="/"><%= @page_title %></a></h1>
    </p>
  </div>
</div>

<div class="container_12">
  <div class="grid_3">
    <p class="title">
    Projects
      <ul class="title">
        <% @projects.sort_by {|p| p.name}.each { |p| %>
        <li><%= link_to p.name, :controller => "imagesite/projects", :action => "show", :id => p.id %></li>
        <% } %>
      </ul>
    </p>
    <p class="title">&nbsp;
    </p>
    <p class="title">
      <%= link_to "Information", :controller => "imagesite/site", :action => "information" %>
    </p>
    <p class="title">
      <%= link_to "Links", :controller => "imagesite/site", :action => "links" %>
    </p>
  </div>
  <div class="grid_9">
    <%= yield %>
  </div>
</div>

<div class="container_12">
  <div class="grid_12">
    <p>
    <div class="sitefooter"><a href="/"><%= raw @site_footer %></a></div>
    </p>
  </div>
</div>


</body>
</html>
